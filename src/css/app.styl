// app global css in Stylus form
.title-page
  color $title
.title-card
  line-height: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size 1.4rem
  font-weight 500
  height 36px
  i
    font-size 2rem
    vertical-align sub
  & > span:last-child
    padding-left 7px
    height 23px
// Modals
  .q-dialog
    .description
      font-size 1.4rem
      font-weight 500
    .row-card-modal
       display flex
       flex-direction row
       align-items center
       justify-content space-between
    .dialog-medium
      min-width 700px
      max-width 80vw
